# ============================================================
# Fact2PDF - Environment Variables
# Copier ce fichier en .env et remplir les valeurs
# NE JAMAIS committer le fichier .env
# ============================================================

# Application
APP_NAME="Fact2PDF"
APP_ENV=development          # development | production
APP_URL=http://localhost:8080
APP_SECRET=change_this_secret_key_min_32_chars

# Base de donn√©es
DB_HOST=db                   # 'db' pour Docker, 'localhost' sinon
DB_PORT=3306
DB_NAME=fact2pdf
DB_USER=fact2pdf_user
DB_PASS=change_this_password
DB_CHARSET=utf8mb4

# JWT (API Mobile)
JWT_SECRET=change_this_jwt_secret_min_32_chars
JWT_EXPIRY=3600              # secondes (1h)

# Upload
UPLOAD_MAX_SIZE=5242880      # 5MB en bytes
UPLOAD_PATH=/var/www/html/storage/uploads

# Email (PHPMailer)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=noreply@example.com
MAIL_PASS=mail_password
MAIL_FROM_NAME="Fact2PDF"

# Logs
LOG_LEVEL=debug              # debug | info | warning | error
LOG_PATH=/var/www/html/storage/logs
